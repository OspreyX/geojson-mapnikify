#!/usr/bin/env node

var generateXML = require('../'),
    fs = require('fs');

if (process.argv.length < 3) {
    return console.error('usage: geojson-mapnikify file.geojson [retina] > stylesheet.xml');
}

var TMP = '/tmp/tl-overlay';
var gj = JSON.parse(fs.readFileSync(process.argv[2], 'utf8'));
var retina = !!process.argv[3];
var gen = generateXML(gj, retina, function(err, res) {
    if (err) return console.error(err);
    process.stdout.write(res);
});
